<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gerry.allgerry.MainActivity">

    <Button
        android:text="Rubrica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:background="#ce1414"
        android:layout_marginBottom="148dp"
        android:id="@+id/Brubrica" />

    <Button
        android:id="@+id/Bcwz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:background="#ce1414"
        android:padding="10dp"
        android:text="Chicken War Z"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/brubrica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:background="#ce1414"
        android:padding="10dp"
        android:text="Rubrica"
        android:textColor="#ffffff" />

    <TextView
        android:text="Gerry's Apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVtitolo"
        android:layout_marginBottom="117dp"
        android:textSize="20pt"
        android:textAlignment="center"
        android:textColor="#ce1414"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Tris Elis Revolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:background="#ce1414"
        android:id="@+id/Btris"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
